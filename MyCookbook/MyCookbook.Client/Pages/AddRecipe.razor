@page "/recipe/add"
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@using MyCookbook.Shared.DTOs.RecipeDTOs
@inject HttpClient Http
@inject NavigationManager Navigation


<h3>Přidání nového receptu</h3>

<EditForm Model="@recipe" OnValidSubmit="HandleValidSubmit" FormName="AddRecipeForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name" class="form-label">Název receptu</label>
        <InputText id="name" class="form-control" @bind-Value="recipe.Name" />
    </div>

    <div class="mb-3">
        <label for="servings" class="form-label">Počet porcí</label>
        <InputNumber id="servings" class="form-control" @bind-Value="recipe.NumberOfServings" />
    </div>

    <button type="submit" class="btn btn-primary">Uložit recept</button>
</EditForm>


@code {
    private CreateRecipeDto recipe = new();

    private async Task HandleValidSubmit()
    {
        var response = await Http.PostAsJsonAsync("recipes", recipe);

        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/");
        }
        else
        {
            // TODO: chybová hláška
        }
    }
}
